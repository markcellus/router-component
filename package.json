{
  "name": "router-component",
  "version": "0.13.0",
  "description": "A simple, declarative router for web components",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkay581/router-component.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "Mark Kennedy <mark@heyimmark.com> (heyimmark.com)",
  "engines": {
    "node": ">=10.16"
  },
  "keywords": [
    "lit router",
    "spa router",
    "webcomponent router",
    "custom element-router",
    "js router",
    "lit element router",
    "declarative router",
    "router component",
    "web-router",
    "router",
    "router element",
    "route management",
    "route component",
    "routing urls",
    "polymer router",
    "html router"
  ],
  "license": "MIT",
  "main": "dist/router-component.common.js",
  "module": "dist/router-component.js",
  "types": "dist/router-component.d.ts",
  "files": ["dist/**/*"],
  "devDependencies": {
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@open-wc/karma-esm": "^2.9.8",
    "@open-wc/testing": "^2.3.9",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "banner-cli": "^0.14.1",
    "eslint": "^6.6.0",
    "http-server": "^0.12.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^5.0.1",
    "lit-html": "^1.1.2",
    "mocha": "^7.1.1",
    "rollup": "^2.3.3",
    "rollup-plugin-typescript2": "^0.27.0",
    "sinon": "^9.0.1",
    "typescript": "^3.7.2",
    "uglify-es": "^3.3.9"
  },
  "scripts": {
    "test": "karma start karma.conf.js && npm run lint",
    "test-server": "karma start karma.conf.js --single-run=false",
    "preversion": "npm test",
    "minify": "uglifyjs dist/router-component.js -o dist/router-component.min.js",
    "build": "rm -rf dist/* && rollup -c && npm run minify && npm run banner",
    "banner": "banner-cli dist/*.js",
    "start": "rollup -c --watch",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:format": "prettier --check '**/*'",
    "start-server": "http-server ./ -p 3239"
  },
  "dependencies": {
    "query-selector-shadow-dom": "^0.4.5"
  }
}
